{
  "image": "irc.png",
  "tasks": [{
  "name" : "irc",
  "description" : "IRC Notifications",
  "author" : "Kit Plummer",
  "version" : "${project.version}-${buildNumber}",
  "class" : "com.maestrodev.IrcWorker",
  "type" : "java",
  "dependencies" : [ {
    "name" : "maestro-irc-plugin-${project.version}.jar"
  }, {
    "name" : "pom.xml"
  } ],
  "task" : {
    "command" : "/irc/postMessage",
    "inputs" : {
      "body" : {
        "value" : "A message from maestro!",
        "type" : "String",
        "required" : true,
        "description" : "message body"
      },
      "nickname" : {
        "value" : "maestro",
        "type" : "String",
        "required" : true,
        "description" : "nick used to connect to IRC"
      },
      "host" : {
        "value" : "irc.freenode.net",
        "type" : "String",
        "required" : true,
        "description" : "IRC server host"
      },
      "password" : {
        "value" : null,
        "type" : "Password",
        "required" : false,
        "description" : "IRC server password"
      },
      "ssl" : {
        "value" : false,
        "type" : "Boolean",
        "required" : false,
        "description" : "use SSL for connecting"
      },
      "port" : {
        "value" : 6667,
        "type" : "Integer",
        "required" : true,
        "description" : "IRC server port"
      },
      "channel" : {
        "value" : "#maestrodev",
        "type" : "String",
        "required" : true,
        "description" : "IRC channel for notifications"
      },
      "ignore_failure" : {
        "value" : false,
        "type" : "Boolean",
        "required" : false,
        "description" : "Do not fail composition if message can't be delivered"
      }
    },
    "outputs" : {},
    "tool_name" : "Notification",
    "icon": "irc.png"
  },
  "source_types" : [ {
    "name" : "irc",
    "options" : {
      "body" : "String",
      "nickname" : "String",
      "host" : "String",
      "password" : "Password",
      "ssl" : "Bolean",
      "port" : "Integer",
      "channel" : "String",
      "ignore_failure" : "Boolean"
    }
  } ]
} ]
}
